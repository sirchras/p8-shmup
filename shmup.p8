version 41
__lua__
function _init()
	--player
	--p={2,60,60}
	p_s=2
	f_s=5
	x,y=60,60
	spd=2
	arr={"hello world! 🐱",0,0,12}
	b={}
end

function _update()
	--⬆️⬇️⬅️➡️
	--p_s,x,y=unpack(p,1,3)
	p_s=2
	dx,dy=0,0
	--btn input
	if btn(⬅️) then
		dx,p_s=-spd,1
	end
	if btn(➡️) then
		dx,p_s=spd,3
	end
	if btn(⬆️) then dy=-spd end
	if btn(⬇️) then dy=spd end
	if btnp(❎) then
		b_x,b_y=x,y-6
		sfx(0)
	end
	--move player
	x=mid(0,x+dx,120)
	y=mid(0,y+dy,120)
	--move projectile
	if b_y then b_y-=1 end
	--anim flame
	f_s+=1
	if f_s>8 then f_s=5 end
end

function _draw()
	cls(0)
	--player
	--spr(unpack(p,1,3))
	spr(p_s,x,y)
	spr(f_s,x,y+8)
	print(unpack(arr))
	if b_y then spr(16,b_x,b_y) end
end
